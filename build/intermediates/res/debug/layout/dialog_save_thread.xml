<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="@string/dialog_save_thread_text"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <CheckBox
        android:id="@+id/dialog_save_thread_thumbs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dialog_save_thread_thumbs" />
    
    <CheckBox
        android:id="@+id/dialog_save_thread_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dialog_save_thread_all" />
    
</LinearLayout>
