<resources>
    <style name="ColoredActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">?attr/materialPrimary</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>
    
    <style name="Theme_Light_Switch" parent="@android:style/Theme.Holo.Light">
        <!-- default color from Holo (drawable/ab_solid_light_holo)  -->
        <item name="materialPrimary">#DDDDDD</item>
        <item name="android:actionBarStyle">@style/ColoredActionBar</item>
    </style>
    <style name="Theme_Dark_Switch" parent="@android:style/Theme.Holo">
        <!-- default color from Holo (drawable/ab_solid_dark_holo)  -->
        <item name="materialPrimary">#222222</item>
        <item name="android:actionBarStyle">@style/ColoredActionBar</item>
    </style>
</resources>